{
  "name": "Smart VFD Environment",
  "dockerComposeFile": [
    "../docker-compose.yml",       // Load Infra (Kafka, Influx)
    "./docker-compose.dev.yml"     // Load Dev Workstation
  ],
  "service": "dev-runner",         // Connect VS Code to the Workstation
  "workspaceFolder": "/workspace",  

  "shutdownAction": "stopCompose",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "humao.rest-client"
      ]
    }
  },

  "postCreateCommand": "sudo corepack enable && cd backend/ai-service && pnpm install && cd ../api-gateway && pnpm install && cd ../db-service && pnpm install && cd ../mqtt-service && pnpm install",

  // Forward ports so you can see them on localh
  "forwardPorts": [3000, 8086, 9092, 1883, 1884, 4000],

  // Run as 'node' user to avoid permission issuescl
  "remoteUser": "node"
}